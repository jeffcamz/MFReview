<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MFReview.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="0">
            <ListView x:Name="listView" />
        </ScrollView>
        <ImageButton Source="plus.png" Grid.Row="0" Clicked="ImageButton_Clicked"  BackgroundColor="DodgerBlue" CornerRadius="30"  HeightRequest="60" WidthRequest="60" 
                    HorizontalOptions="End"  VerticalOptions="End" Margin="0,0,20,20" />
    </Grid>
</ContentPage>
